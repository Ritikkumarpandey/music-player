let gif = document.getElementById('gif');\par
let masterSongName = document.getElementById('masterSongName');\par
let songItems = Array.from(document.getElementsByClassName('songItem'));\par
\par
let songs = [\par
    \{songName: "Warriyo - Mortals [NCS Release]", filePath: "songs/1.mp3", coverPath: "covers/1.jpg"\},\par
    \{songName: "Cielo - Huma-Huma", filePath: "songs/2.mp3", coverPath: "covers/2.jpg"\},\par
