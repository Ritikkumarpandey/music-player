]\par
\par
songItems.forEach((element, i)=>\{ \par
    element.getElementsByTagName("img")[0].src = songs[i].coverPath; \par
    element.getElementsByClassName("songName")[0].innerText = songs[i].songName; \par
\})\par
 \par
\par
// Handle play/pause click\par
masterPlay.addEventListener('click', ()=>\{\par
    if(audioElement.paused || audioElement.currentTime<=0)\{\par
        audioElement.play();\par
        masterPlay.classList.remove('fa-play-circle');\par
        masterPlay.classList.add('fa-pause-circle');\par
        gif.style.opacity = 1;\par
    \}\par
    else\{\par
        audioElement.pause();\par
        masterPlay.classList.remove('fa-pause-circle');\par
        masterPlay.classList.add('fa-play-circle');\par
        gif.style.opacity = 0;\par
    \}\par
\})\par
// Listen to Events\par
audioElement.addEventListener('timeupdate', ()=>\{ \par
    // Update Seekbar\par
    progress = parseInt((audioElement.currentTime/audioElement.duration)* 100); \par
    myProgressBar.value = progress;\par
\})\par
\par
myProgressBar.addEventListener('change', ()=>\{\par
    audioElement.currentTime = myProgressBar.value * audioElement.duration/100;\par
\})\par
\par
const makeAllPlays = ()=>\{\par
    Array.from(document.getElementsByClassName('songItemPlay')).forEach((element)=>\{\par
        element.classList.remove('fa-pause-circle');\par
        element.classList.add('fa-play-circle');\par
    \})\par
\}\par
\par
Array.from(document.getElementsByClassName('songItemPlay')).forEach((element)=>\{\par
    element.addEventListener('click', (e)=>\{ \par
        makeAllPlays();\par
        songIndex = parseInt(e.target.id);\par
        e.target.classList.remove('fa-play-circle');\par
        e.target.classList.add('fa-pause-circle');\par
        audioElement.src = `songs/$\{songIndex+1\}.mp3`;\par
        masterSongName.innerText = songs[songIndex].songName;\par
        audioElement.currentTime = 0;\par
        audioElement.play();\par
        gif.style.opacity = 1;\par
        masterPlay.classList.remove('fa-play-circle');\par
        masterPlay.classList.add('fa-pause-circle');\par
    \})\par
\})\par
\par
document.getElementById('next').addEventListener('click', ()=>\{\par
    if(songIndex>=9)\{\par
        songIndex = 0\par
    \}\par
    else\{\par
        songIndex += 1;\par
    \}\par
    audioElement.src = `songs/$\{songIndex+1\}.mp3`;\par
    masterSongName.innerText = songs[songIndex].songName;\par
    audioElement.currentTime = 0;\par
    audioElement.play();\par
    masterPlay.classList.remove('fa-play-circle');\par
    masterPlay.classList.add('fa-pause-circle');\par
\par
\})\par
\par
document.getElementById('previous').addEventListener('click', ()=>\{\par
    if(songIndex<=0)\{\par
        songIndex = 0\par
    \}\par
    else\{\par
        songIndex -= 1;\par
    \}\par
    audioElement.src = `songs/$\{songIndex+1\}.mp3`;\par
    masterSongName.innerText = songs[songIndex].songName;\par
    audioElement.currentTime = 0;\par
